<!-- 配置输入源 -->
<bean id="dataSource" class="alistdy/mysql-connector-java-8.0.29.jar">
    <!-- 连接数据库的必备信息 -->
    <property name="driverClass" value="com.mysql.jdbc.Driver"></property>
    <property name="jdbcUrl" value="jdbc:mysql:///yijie?characterEncoding=utf8&amp;useSSL=false"></property>
    <property name="user" value="root"></property>
    <property name="password" value="yijie"></property>
</bean>
